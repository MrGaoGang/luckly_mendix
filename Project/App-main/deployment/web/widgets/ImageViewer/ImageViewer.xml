<?xml version="1.0" encoding="utf-8" ?>
<widget id="ImageViewer.widget.ImageViewer" needsEntityContext="true"
    xmlns="http://www.mendix.com/widget/1.0/">
    <name>ImageViewer</name>
    <description>The description of this widget.</description>
    <icon />
    <properties>
        <property key="imageWidth" type="integer" required="true" defaultValue="900">
            <caption>Image Width</caption>
            <category>Config</category>
            <description>图片宽度</description>
        </property>
        <property key="imageHeight" type="integer" required="true" defaultValue="700">
            <caption>Image Height</caption>
            <category>Config</category>
            <description>图片高度</description>
        </property>
        <property key="dataAttr" type="attribute" required="false">
            <caption>Data attribute</caption>
            <category>Data Source</category>
            <description>图片的URL地址（来自实体）</description>
            <attributeTypes>
                <attributeType name="String"></attributeType>
            </attributeTypes>
        </property>

        <property key="dataMF" type="microflow" required="false">
            <caption>Data microflow</caption>
            <category>Data Source</category>
            <description>图片的URL地址（来自微流）</description>
            <returnType type="String"/>
        </property>

        <property key="dataString" type="string" required="false" multiline="false">
            <caption>Data String</caption>
            <category>Data Source</category>
            <description>图片的URL地址</description>
        </property>

        <property key="callBackMF" type="string" required="false" multiline="false">
            <caption>Click Callback</caption>
            <category>Data Source</category>
            <description>点击图片的事件回调</description>
        </property>
    </properties>
</widget>

